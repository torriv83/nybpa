{
    "preset": "laravel",
    "rules": {
        "binary_operator_spaces" : { "default" : "single_space" },
        "array_syntax": { "syntax": "short" },
        "ordered_imports": true,
        "no_unused_imports": true,
        "phpdoc_no_alias_tag": true,
        "phpdoc_order": true,
        "single_quote": true
    }
}
